<div class="page-header">
  <h1>
    Places
    <a href="/places/new" class="btn btn-lg btn-success">New Place</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Place name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Neighborhood</th>
        <th>Place type</th>
        <th>User</th>
        <th>Comments</th>
        <th>Actions</th>
      </tr>

      <% @places.each do |place| %>
      <tr>
        <td><%= place.place_name %></td>
        <td><%= place.address %></td>
        <td><%= place.city %></td>
        <td><%= place.state %></td>
        <td><%= place.zip %></td>
        <td><%= place.neighborhood.neighborhood_name %></td>
        <td><%= place.place_type.place_type %></td>
        <td><%= place.user_id %></td>
        <td><%= place.comments %></td>
        <td>
          <a href="/places/<%= place.id %>" class="btn btn-primary">Show</a>
          <a href="/places/<%= place.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_place/<%= place.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
